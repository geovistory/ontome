{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h2>
                    Pick the properties from {{ class.classVersionForDisplay() }} for the {{ profile }} profile
                    <a href="{{ path('profile_edit', {
                        id: profile.id
                    }) }}#classes"
                       class="pull-right btn btn-link"
                       role="button">
                        <i class="fas fa-arrow-left"></i><span>&nbsp;Back</span>
                    </a>
                </h2>
                <h3>Outgoing properties (this class is domain)</h3>
                <table class="table table-striped" id="outgoing-properties-table" style="width: 100%">
                    <thead>
                    <tr>
                        <th>Domain</th>
                        <th></th> <!-- Cardinalité Domain -->
                        <th>Identifier</th>
                        <th>Property label</th>
                        <th></th> <!-- Cardinalité Range -->
                        <th>Range</th>
                        <th>Namespace</th>
                        <th>Associate</th>
                    </tr>
                    </thead>
                </table>
                <h3>Outgoing properties (inherited from ancestors)</h3>
                <table class="table table-striped" id="outgoing-inherited-properties-table" style="width: 100%">
                    <thead>
                    <tr>
                        <th>Domain</th>
                        <th></th> <!-- Cardinalité Domain -->
                        <th>Identifier</th>
                        <th>Property label</th>
                        <th></th> <!-- Cardinalité Range -->
                        <th>Range</th>
                        <th>Namespace</th>
                        <th>Associate</th>
                    </tr>
                    </thead>
                </table>
                <h3>Incoming properties (this class is range)</h3>
                <table class="table table-striped" id="incoming-properties-table">
                    <thead>
                    <tr>
                        <th>Domain</th>
                        <th></th> <!-- Cardinalité Domain -->
                        <th>Identifier</th>
                        <th>Property label</th>
                        <th></th> <!-- Cardinalité Range -->
                        <th>Range</th>
                        <th>Namespace</th>
                        <th>Associate</th>
                    </tr>
                    </thead>
