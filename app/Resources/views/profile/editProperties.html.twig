                        urlRemoveProperty = urlRemoveProperty.replace("profileID", profileID);
                        urlRemoveProperty = urlRemoveProperty.replace("propertyID", row.propertyId);
                        urlRemoveProperty = urlRemoveProperty.replace("domainID", classID);
                        urlRemoveProperty = urlRemoveProperty.replace("rangeID", row.rangeId);

                        var checkIcon = '<a data-id="'+row.propertyId+'" data-url="'+urlSelectProperty+'" class="select-incoming-inherited-property"><span class="incoming-inherited-unchecked-icon glyphicon glyphicon-unchecked" data-id="'+row.propertyId+'"></span></a><span class="select-incoming-inherited-property-loading-icon" data-id="'+row.propertyId+'" style="display: none"><span class="fas fa-spinner fa-spin"></span>';
