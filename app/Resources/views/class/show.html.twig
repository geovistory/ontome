{% extends 'base.html.twig' %}

{% block title %}
    {{ classVersion }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/graph.css') }}"/>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="clearfix">
            <div class="pull-right" style="margin-top: 20px; margin-bottom: 10px;">
                <div class="dropdown inline-block">
                    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownVersions" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                        {{ classVersion.namespaceForVersion }}
                        <span class="label label-{{ classVersion.namespaceForVersion.status.classCss }}">
                            {{ classVersion.namespaceForVersion.status.label }}
                        </span>
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdown-versions">
                        {% if classVersion.class.classVersions|length > 1 %}
                            {% for otherClassVersion in classVersion.class.classVersions if otherClassVersion != classVersion %}
                                <li>
                                    <a href="{{ path('class_show_with_version', {
                                        'id': classVersion.class.id,
                                        'namespaceFromUrlId': otherClassVersion.namespaceForVersion.id,
                                        }) }}">{{ otherClassVersion.namespaceForVersion }}
                                        <span class="label label-{{ otherClassVersion.namespaceForVersion.status.classCss }}">
                                            {{ otherClassVersion.namespaceForVersion.status.label }}
                                        </span>
                                    </a>
                                </li>
                            {% endfor %}
                        {% else %}
                            <li class="disabled">
                                <a href="#">No other version</a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
                {% if is_granted('edit', classVersion) and (classVersion.validationStatus is null or classVersion.validationStatus.id == 27) %}
                <p class="inline-block">
                    <a href="{{ path('class_edit', {
                        'id': classVersion.class.id
                    }) }}" class="btn btn-success btn-edit">
                        <i class="fa fa-edit"></i>
                    </a>
                </p>
                {% endif %}
            </div>
            <h2>{{ classVersion }}</h2>
        </div>
        {% if classVersion.namespaceForVersion.isOngoing %}
            <div>
                {% set countValidationsTxtp = 0 %}
                {% set countValidationsLbl = 0 %}

                {% for textProperty in classVersion.class.textProperties
                    if textProperty.systemType.id == 1
                    and textProperty.namespaceForVersion.id in namespacesId %}
                    {% if textProperty.validationStatus is not null and textProperty.validationStatus.id == 26 %}
                        {% set countValidationsTxtp = countValidationsTxtp + 1 %}
                    {% endif %}
                {% endfor %}

                {% for label in classVersion.class.labels
                    if label.namespaceForVersion.id in namespacesId %}
                    {% if label.validationStatus is not null and label.validationStatus.id == 26 %}
                        {% set countValidationsLbl = countValidationsLbl + 1 %}
                    {% endif %}
                {% endfor %}

                {% if countValidationsTxtp > 0 and countValidationsLbl > 0 %}
                    {{ include('class/_validation.html.twig') }}
                {% else %}
                    <h6><span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span><em>This class does not yet have the minimum number of validated parts required for publication.</em></h6>
                {% endif %}
            </div>
        {% endif %}
        <ul class="nav nav-tabs" id="main-tabs">
            <li class="active"><a data-toggle="tab" href="#summary">Summary</a></li>
            <li><a data-toggle="tab" href="#identification">Identification</a></li>
            <li><a data-toggle="tab" href="#definition">Definition</a></li>
            <li><a data-toggle="tab" href="#properties">Properties</a></li>
            <li><a data-toggle="tab" href="#namespaces">Namespaces</a></li>
            <li><a data-toggle="tab" href="#class-hierarchy">Hierarchy</a></li>
            <li><a data-toggle="tab" href="#relations">Relations</a></li>
            {% if isE55Descendant and classVersion.namespaceForVersion.topLevelNamespace.projectForTopLevelNamespace.projectThesaurusAssociations is not empty %}
            <li><a data-toggle="tab" href="#vocabulary">Vocabulary</a></li>
            {% endif %}
            <li><a data-toggle="tab" href="#profiles">Profiles</a></li>
            <li><a data-toggle="tab" href="#graph">Graph</a></li>
            <li>
                <a data-toggle="tab" href="#comments" class="updateViewComment" data-id="{{ classVersion.class.id }}" data-object="class">
                    Comments
                    {% set commentsClass = classVersion.class.comments %}
                    {% set commentsClassVersion = commentsClass|filter(commentsClass => commentsClass.namespaceForVersion.id == classVersion.namespaceForVersion.id) %}
                    <span class="badge {% if commentsClassVersion is not empty %}progress-bar-danger {% endif %}">
                        {{ commentsClassVersion|length }}
                    </span>
                </a>
            </li>
        </ul>
        <div class="tab-content">
            <div id="summary" class="tab-pane fade in active">
                <h3>{{ classVersion.invertedLabel() }}</h3>
                <div class="container">
                    {# Subclass of #}
                    {% set isSubclassOf = false %}
                    {% for association in classVersion.class.childClassAssociations
                        if association.namespaceForVersion.id in namespacesId %}
                        {% set isSubclassOf = true %}
                    {% endfor %}
                    {% if isSubclassOf %}
                    <div class="row">
                        <div class="col-lg-2">
                            <p>Subclass of:</p>
                        </div>
                        <div class="col-lg-10">
                            <ul class="list-unstyled">
                            {# Filtrer les associations is_subclass_of avec namespacesId #}
                            {% for association in classVersion.class.childClassAssociations
                                if association.namespaceForVersion.id in namespacesId %}

                                {# Initialisation #}
                                {% set isGoodNamespace = true %}
                                {% set route = 'class_show_with_version' %}
                                {% set route_params = {'id': association.parentClass.id,  'namespaceFromUrlId': association.parentClassNamespace.id } %}

                                {# Le namespace de parentClass correspond-t-il aux namespaces selectionn√©s ? Si non : rouge #}
                                {% if association.parentClassNamespace.id not in association.namespaceForVersion.selectedNamespacesId %}
                                    {% set isGoodNamespace = false %}
                                    {% set route = 'namespace_show' %}
                                    {% set route_params = {'id': association.namespaceForVersion.id,  '_fragment': 'mismatches' } %}
                                {% endif %}
                                <li>
                                    <a href="{{ path(route, route_params) }}" title="{{ association.parentClassNamespace }}"  {% if not isGoodNamespace %}class="text-danger"{% endif %}>
                                        {{ association.parentClass.getClassVersionForDisplay(association.parentClassNamespace).invertedLabel(true) }}</a>
                                </li>
                            {% endfor %}
                            </ul>
                        </div>
                    </div>
                    {% endif %}

                    {# Superclass of #}
                    {% set isSuperclassOf = false %}
                    {% for association in classVersion.class.parentClassAssociations
                        if association.namespaceForVersion.id in namespacesId %}
                        {% set isSuperclassOf = true %}
                    {% endfor %}
                    {% if isSuperclassOf %}
                    <div class="row">
                        <div class="col-lg-2">
                            <p>Superclass of:</p>
                        </div>
                        <div class="col-lg-10">
                            <ul class="list-unstyled">
                            {# Filtrer les associations is_subclass_of avec namespacesId #}
                            {% for association in classVersion.class.parentClassAssociations
                                if association.namespaceForVersion.id in namespacesId %}

                                {# Initialisation #}
                                {% set isGoodNamespace = true %}
                                {% set route = 'class_show_with_version' %}
                                {% set route_params = {'id': association.childClass.id,  'namespaceFromUrlId': association.childClassNamespace.id } %}

                                {# Le namespace de childClass correspond-t-il aux namespaces selectionn√©s ? Si non : rouge #}
                                {% if association.parentClassNamespace.id not in association.namespaceForVersion.selectedNamespacesId %}
                                    {% set isGoodNamespace = false %}
                                    {% set route = 'namespace_show' %}
                                    {% set route_params = {'id': association.namespaceForVersion.id,  '_fragment': 'mismatches' } %}
                                {% endif %}
                                <li>
                                    <a href="{{ path(route, route_params) }}" title="{{ association.childClassNamespace }}" {% if not isGoodNamespace %}class="text-danger"{% endif %}>
                                            {{ association.childClass.classVersionForDisplay(association.childClassNamespace).invertedLabel(true) }}</a>
                                </li>
                            {% endfor %}
                            </ul>
                        </div>
                    </div>
                    {% endif %}

                    {# Relations #}
                    {% set isRelated = false %}
                    {% for relation in classVersion.class.entityAssociations
                        if relation.namespaceForVersion.id in namespacesId
                        and relation.systemType.id in [4,19] %}
                        {% set isRelated = true %}
                    {% endfor %}
                    {% if isRelated %}
                    <div class="row">
                        <div class="col-lg-2">
                            <p>Relations:</p>
                        </div>
                        <div class="col-lg-10">
                            <ul class="list-unstyled">
                                {# Filtrer les associations entity_associations avec namespacesId #}
                                {# SystemTypes utilis√©s: 4=owl:equivalentClass, 19=owl:DisjointWith #}
                                {% for relation in classVersion.class.entityAssociations
                                    if relation.namespaceForVersion.id in namespacesId
                                    and relation.systemType.id in [4,19] %}
                                    <li>{{ relation.systemType.standardLabel }}
                                        {% if relation.sourceClass.id == classVersion.class.id %}
                                            {# La classe affich√©e est "source", on cherche le "target" #}

                                            {# Initialisation #}
                                            {% set isGoodNamespace = true %}
                                            {% set route = 'class_show_with_version' %}
                                            {% set route_params = {'id': relation.targetClass.id,  'namespaceFromUrlId': relation.targetNamespaceForVersion.id } %}

                                            {# Le namespace de targetClass correspond-t-il aux namespaces selectionn√©s ? Si non : rouge #}
                                            {% if relation.targetNamespaceForVersion.id not in relation.namespaceForVersion.selectedNamespacesId %}
                                                {% set isGoodNamespace = false %}
                                                {% set route = 'namespace_show' %}
                                                {% set route_params = {'id': relation.namespaceForVersion.id,  '_fragment': 'mismatches' } %}
                                            {% endif %}
                                            <a href="{{ path(route, route_params) }}" title="{{ relation.targetNamespaceForVersion }}" {% if not isGoodNamespace %}class="text-danger"{% endif %}>
                                                {{ relation.targetClass.classVersionForDisplay(relation.targetNamespaceForVersion).invertedLabel(true) }}</a>
                                        {% else %}
                                            {# La classe affich√©e est "target", on cherche la "source" #}

                                            {# Initialisation #}
                                            {% set isGoodNamespace = true %}
                                            {% set route = 'class_show_with_version' %}
                                            {% set route_params = {'id': relation.sourceClass.id,  'namespaceFromUrlId': relation.sourceNamespaceForVersion.id } %}

                                            {# Le namespace de sourceClass correspond-t-il aux namespaces selectionn√©s ? Si non : rouge #}
                                            {% if relation.sourceNamespaceForVersion.id not in relation.namespaceForVersion.selectedNamespacesId %}
                                                {% set isGoodNamespace = false %}
                                                {% set route = 'namespace_show' %}
                                                {% set route_params = {'id': relation.namespaceForVersion.id,  '_fragment': 'mismatches' } %}
                                            {% endif %}

                                            <a href="{{ path(route, route_params) }}" title="{{ relation.sourceNamespaceForVersion }}" {% if not isGoodNamespace %}class="text-danger"{% endif %}>
                                                {{ relation.sourceClass.classVersionForDisplay(relation.sourceNamespaceForVersion).invertedLabel(true) }}</a>
                                        {% endif %}
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                    {% endif %}

                    {# Scope note #}
                    <div class="row">
                        <div class="col-lg-2">
                            <p>Scope note:</p>
                        </div>
                        <div class="col-lg-10">
                            {% set scopeNote=null %}
                            {% set break=false %}
                            {# Filtrer les textproperties avec namespacesId #}
                            {# SystemType utilis√©: 1=Scope note #}
                            {# Retrouver en priorit√© le scope note en anglais #}
                            {% for textProperty in classVersion.class.textProperties
                                if textProperty.namespaceForVersion.id in namespacesId
                                and textProperty.systemType.id == 1
                                and not break %}
                                {% if textProperty.languageIsoCode == 'en' %}
                                    {% set break = true %}{# En anglais donc prioritaire: break #}
                                    {% set scopeNote = textProperty.textProperty %}
                                {% else %}
                                    {% if scopeNote is null %}
                                        {% set scopeNote = textProperty.textProperty %}
                                    {% endif %}
                                {% endif %}
                            {% endfor %}
                            {% if scopeNote is null %}
                                {% set scopeNote = '<i>No scope note yet.</i>' %}
                            {% endif %}
                            {{ scopeNote|raw }}
                        </div>
                    </div>

                    {# Examples #}
                    <div class="row">
                        <div class="col-lg-2">
                            <p>Examples:</p>
                        </div>
                        <div class="col-lg-10">
                            {% set isExamplesEmpty = true %}
                            {# Filtrer les textproperties avec namespacesId #}
                            {# SystemType utilis√©: 7=Example #}
                            {% for textProperty in classVersion.class.textProperties
                                if textProperty.namespaceForVersion.id in namespacesId
                                and textProperty.systemType.id == 7 %}
                                {% set isExamplesEmpty = false %}
                                {{ textProperty.textProperty|raw }}
                            {% endfor %}
                            {% if isExamplesEmpty %}
                                <p><i>No example yet.</i></p>
                            {% endif %}
                        </div>
                    </div>

                    {# Internal notes #}
                    {% set internalNoteType = 33 %}
                        {% if classVersion.class.textProperties|filter(v => is_granted('edit', v) and v.namespaceForVersion == app.user.getCurrentOngoingNamespace|default(null) and v.systemType.id == internalNoteType)|length > 0 is null %}
                        <div class="row">
                            <div class="col-lg-2">
                                <p>Internal notes:</p>
                            </div>
                            <div class="col-lg-10">
                                {% for textProperty in classVersion.class.textProperties
                                    if (textProperty.namespaceForVersion.id == app.user.getCurrentOngoingNamespace.id and textProperty.systemType.id == internalNoteType) %}
                                    {{ textProperty.textProperty|raw }}
                                {% endfor %}
                            </div>
                        </div>
                    {% endif %}

                    {# Context notes #}
                    {% set contextNoteType = 34 %}
                    {% if classVersion.class.textProperties|filter(v => v.namespaceForVersion.id in namespacesId and v.systemType.id == contextNoteType)|length > 0 %}
                        <div class="row">
                            <div class="col-lg-2">
                                <p>Context notes:</p>
                            </div>
                            <div class="col-lg-10">
                                {% for textProperty in classVersion.class.textProperties
                                    if (textProperty.namespaceForVersion.id in namespacesId and textProperty.systemType.id == contextNoteType) %}
                                    {{ textProperty.textProperty|raw }}
                                {% endfor %}
                            </div>
                        </div>
                    {% endif %}

                    {# Bibliographical notes #}
                    {% set bibliographicalNoteType = 35 %}
                    {% if classVersion.class.textProperties|filter(v => v.namespaceForVersion.id in namespacesId and v.systemType.id == bibliographicalNoteType)|length > 0 %}
                        <div class="row">
                            <div class="col-lg-2">
                                <p>Bibliographical notes:</p>
                            </div>
                            <div class="col-lg-10">
                                {% for textProperty in classVersion.class.textProperties
                                    if (textProperty.namespaceForVersion.id in namespacesId and textProperty.systemType.id == bibliographicalNoteType) %}
                                    {{ textProperty.textProperty|raw }}
                                {% endfor %}
                            </div>
                        </div>
                    {% endif %}

                    {# In First Order Logic #}
                    {% set associationCount = 0 %}
                    {% for association in classVersion.class.childClassAssociations
                        if association.namespaceForVersion.id in namespacesId %}
                        {% set associationCount = associationCount + 1 %}
                    {% endfor %}
                    {% if associationCount > 0 %}
                    <div class="row">
                        <div class="col-lg-2">
                            <p>In First Order Logic:</p>
                        </div>
                        <div class="col-lg-10">
                            <ul class="list-unstyled">
                            {% for association in classVersion.class.childClassAssociations
                                if association.namespaceForVersion.id in namespacesId %}
                                <li>{{ classVersion.class.identifierInNamespace }}(x) ‚áí {{ association.parentClass.identifierInNamespace }}(x)</li>
                            {% endfor %}
                            </ul>
                        </div>
                    </div>
                    {% endif %}

                    {# Outgoing properties #}
                    {% if outgoingProperties|length > 0 %}
                        <div class="row">
                            <div class="col-lg-2">
                                <p>Outgoing properties:</p>
                            </div>
                            <div class="col-lg-10">
                                <ul class="list-unstyled">
                                    {# inutile de filtrer outgoingProperties car d√©j√† fait par le repository #}
                                    {% for outgoingProperty in outgoingProperties %}

                                        {# Initialisation #}
                                        {% set isGoodNamespace = true %}
                                        {% set route = 'class_show_with_version' %}
                                        {% set route_params = {'id': outgoingProperty.rangeId,  'namespaceFromUrlId': outgoingProperty.rangeNamespaceId } %}

                                        {# V√©rification #}
                                        {% if outgoingProperty.rangeNamespaceId not in outgoingProperty.selectedNamespacesId %}
                                            {% set isGoodNamespace = false %}
                                            {% set route = 'namespace_show' %}
                                            {% set route_params = {'id': outgoingProperty.propertyNamespaceId,  '_fragment': 'mismatches' } %}
                                        {% endif %}

                                        <li>
                                            <a href="{{ path('property_show_with_version', {
                                                'id': outgoingProperty.propertyId,
                                                'namespaceFromUrlId': outgoingProperty.propertyNamespaceId
                                            }) }}" title="{{ outgoingProperty.namespace }}">{{ outgoingProperty.propertyRootNamespacePrefix }}:{{ outgoingProperty.property }}</a>
                                            ‚Üí
                                            <a href="{{ path(route, route_params) }}" title="{{ outgoingProperty.rangeNamespace }}" {% if not isGoodNamespace %}class="text-danger"{% endif %}>
                                                {{ outgoingProperty.rangeRootNamespacePrefix }}:{{ outgoingProperty.range }}</a>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                    {% endif %}

                    {# Incoming properties #}
                    {% if ingoingProperties|length > 0 %}
                        <div class="row">
                            <div class="col-lg-2">
                                <p>Incoming properties:</p>
                            </div>
                            <div class="col-lg-10">
                                <ul class="list-unstyled">
                                    {% for ingoingProperty in ingoingProperties %}

                                        {# Initialisation #}
                                        {% set isGoodNamespace = true %}
                                        {% set route = 'class_show_with_version' %}
                                        {% set route_params = {'id': ingoingProperty.domainId,  'namespaceFromUrlId': ingoingProperty.domainNamespaceId } %}

                                        {# V√©rification #}
                                        {% if ingoingProperty.domainNamespaceId not in ingoingProperty.selectedNamespacesId %}
                                            {% set isGoodNamespace = false %}
                                            {% set route = 'namespace_show' %}
                                            {% set route_params = {'id': ingoingProperty.propertyNamespaceId,  '_fragment': 'mismatches' } %}
                                        {% endif %}

                                        <li>
                                            <a href="{{ path(route, route_params) }}" title="{{ ingoingProperty.domainNamespace }}" {% if not isGoodNamespace %}class="text-danger"{% endif %}>
                                                {{ ingoingProperty.domainRootNamespacePrefix }}:{{ ingoingProperty.domain }}</a>
                                            ‚Üí
                                            <a href="{{ path('property_show_with_version', {
                                                'id': ingoingProperty.propertyId,
                                                'namespaceFromUrlId': classVersion.namespaceForVersion.id }) }}" title="{{ ingoingProperty.namespace }}">
                                                {{ ingoingProperty.propertyRootNamespacePrefix }}:{{ ingoingProperty.property }}</a>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
            <div id="definition" class="tab-pane fade">
                <h3>Scope notes</h3>
                <table class="table table-striped" id="scope-notes-table">
                    <thead>
                    <tr>
                        <th>Show</th>
                        <th>Scope note</th>
                        <th>Language</th>
                        <th>Namespace</th>
                        <th>View details</th>
                        <th>Comments</th>
                        {% if classVersion.namespaceForVersion.isOngoing %}
                            <th>Validation</th>
                        {% endif %}
                    </tr>
                    </thead>
                    <tbody>
                    {% for textProperty in classVersion.class.textProperties
                        if textProperty.systemType.id == 1
                        and textProperty.namespaceForVersion.id in namespacesId %}
                        {{ include('textProperty/modal.html.twig', { 'modalId': textProperty.id }) }}
                        <tr>
                            <td><a class="btn" href="#" data-toggle="modal" data-target="#modal-text-property-{{ textProperty.id }}"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a></td>
                            <td class="truncated-text">
                                <span>{{ textProperty.textProperty|striptags|raw }}</span>
                            </td>
                            <td>{{ textProperty.languageIsoCode}}</td>
                            <td>{{ textProperty.namespaceForVersion }}</td>
                            <td>
                                <a class="btn" href="{{ path('text_property_show', {
                                    'id': textProperty.id
                                }) }}">
                                    <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
                                </a>
                            </td>
                            <td>
                                <a class="btn updateViewComment" href="{{ path('text_property_show', {
                                    'id': textProperty.id
                                }) }}#comments" data-id="{{ textProperty.id }}" data-object="text-property">
                                    <span class="badge {% if textProperty.comments|length > 0  %}progress-bar-danger {% endif %}">{{ textProperty.comments|length }}</span>
                                </a>
                            </td>
                            {% if classVersion.namespaceForVersion.isOngoing %}
                                <td>
                                    <a class="btn" href="{{ path('text_property_show', {
                                        'id': textProperty.id
                                    }) }}">
                                    {% if textProperty.validationStatus is null %}
                                        <span class="label label-info">
                                        Candidate
                                    </span>
                                    {% elseif textProperty.validationStatus.id == 26  %}
                                        <span class="label label-success">
                                        {{ textProperty.validationStatus }}
                                    </span>
                                    {% elseif textProperty.validationStatus.id == 27  %}
                                        <span class="label label-danger">
                                        {{ textProperty.validationStatus }}
                                    </span>
                                    {% elseif textProperty.validationStatus.id == 28  %}
                                        <span class="label label-warning">
                                        {{ textProperty.validationStatus }}
                                    </span>
                                    {% endif %}
                                    </a>
                                </td>
                            {% endif %}
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <h3>Examples</h3>
                <table class="table table-striped" id="examples-table">
                    <thead>
                    <tr>
                        <th>Show</th>
                        <th>Example</th>
                        <th>Language</th>
                        <th>Namespace</th>
                        <th>View details</th>
                        <th>Comments</th>
                        {% if classVersion.namespaceForVersion.isOngoing %}
                            <th>Validation</th>
                        {% endif %}
                    </tr>
                    </thead>
                    <tbody>
                    {% for textProperty in classVersion.class.textProperties
                        if textProperty.systemType.id == 7
                        and textProperty.namespaceForVersion.id in namespacesId %}
                        {{ include('textProperty/modal.html.twig', { 'modalId': textProperty.id }) }}
                        <tr>
                            <td><a class="btn" href="#" data-toggle="modal" data-target="#modal-text-property-{{ textProperty.id }}"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a></td>
                            <td class="truncated-text">
                                <span>{{ textProperty.textProperty|striptags|raw }}</span>
                            </td>
                            <td>{{ textProperty.languageIsoCode}}</td>
                            <td>{{ textProperty.namespaceForVersion }}</td>
                            <td>
                                <a class="btn" href="{{ path('text_property_show', {
                                    'id': textProperty.id
                                }) }}">
                                    <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
                                </a>
                            </td>
                            <td>
                                <a class="btn updateViewComment" href="{{ path('text_property_show', {
                                    'id': textProperty.id
                                }) }}#comments" data-id="{{ textProperty.id }}" data-object="text-property">
                                    <span class="badge {% if textProperty.comments|length > 0  %}progress-bar-danger {% endif %}">{{ textProperty.comments|length }}</span>
                                </a>
                            </td>
                            {% if classVersion.namespaceForVersion.isOngoing %}
                                <td>
                                    <a class="btn" href="{{ path('text_property_show', {
                                        'id': textProperty.id
                                    }) }}">
                                    {% if textProperty.validationStatus is null %}
                                        <span class="label label-info">
                                        Candidate
                                    </span>
                                    {% elseif textProperty.validationStatus.id == 26  %}
                                        <span class="label label-success">
                                        {{ textProperty.validationStatus }}
                                    </span>
                                    {% elseif textProperty.validationStatus.id == 27  %}
                                        <span class="label label-danger">
                                        {{ textProperty.validationStatus }}
                                    </span>
                                    {% elseif textProperty.validationStatus.id == 28  %}
                                        <span class="label label-warning">
                                        {{ textProperty.validationStatus }}
                                    </span>
                                    {% endif %}
                                    </a>
                                </td>
                            {% endif %}
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                {% if app.user is not null and  app.user.currentOngoingNamespace is not null %}
                <div class="pull-right add-div">
                    <a href="{{ path('text_property_new', {'type': 'internal-note', 'object': 'class', 'objectId': classVersion.class.id })}}"
                       class="btn btn-primary pull-right">
                        Add <span class="fa fa-plus-circle"></span>
                    </a>
                </div>
                {% endif %}
                <h3>Additional notes</h3>
                <table class="table table-striped" id="additional-notes-table">
                    <thead>
                    <tr>
                        <th>Show</th>
                        <th>Notes</th>
                        <th>Type</th>
