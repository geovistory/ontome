<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Ontologies Management Inteface{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('vendor/bootstrap/css/bootstrap.min.css') }}"/>
            <link rel="stylesheet" href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css">
            <link rel="stylesheet" href="{{ asset('css/styles.css') }}"/>
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <header class="header">
            <h1 class="logo">Ontologies Management Interface</h1>
            <ul class="navi">
                {% if is_granted('ROLE_USER') %}
                    <li><a href="{{ path('security_logout') }}">Logout</a></li>
                {% else %}
                    <li><a href="{{ path('security_login') }}">Login</a></li>
                {% endif %}
            </ul>
        </header>
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#">Ontologies Management Interface</a>
                </div>
                <ul class="nav navbar-nav">
                    <li class="active"><a href="{{ url('home') }}">Home</a></li>
                    <li><a href="{{ url('app_class_list') }}">Classes</a></li>
                    <li><a href="{{ url('app_property_list') }}">Properties</a></li>
                    <li><a href="{{ url('app_namespace_list') }}">Namespaces</a></li>
                    <li><a href="#">System types</a></li>
                </ul>
            </div>
        </nav>
        <div class="main-content">
            {% for msg in app.session.flashBag.get('success') %}
                <div class="alert alert-success">
                    {{ msg }}
                </div>
            {% endfor %}
            {% block body %}{% endblock %}
        </div>

        <div class="footer">
            <p class="footer-text">Propulsé par le <a href="http://larhra.ish-lyon.cnrs.fr/pole-histoire-numerique">Pôle Histoire Numérique</a></p>
        </div>
        {% block javascripts %}
            <script
                    src="https://code.jquery.com/jquery-3.2.1.min.js"
                    integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
                    crossorigin="anonymous">
            </script>
            <script src="{{ asset('vendor/bootstrap/js/bootstrap.min.js') }}"></script>
            <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
            <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap.min.js"></script>
        {% endblock %}
    </body>
</html>
