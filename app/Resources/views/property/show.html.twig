{% extends 'base.html.twig' %}

{% block title %}{{ property }}{% endblock %}

{% block body %}

    <div class="container">
        <h2 class="property-name">
            {{ property }}
            {% if property.propertyOfOrigin is not null %}
                [inherited, cf. <a href="{{ path('property_show', {'id': property.propertyOfOrigin.id}) }}" target="_blank"><em>original</em></a>]
            {% endif %}
            {% if is_granted('edit', property) %}
                <a href="{{ path('property_edit', {
                    id: property.id
                }) }}" class="pull-right btn btn-success btn-edit">
                    <i class="fa fa-edit"></i>
                </a>
            {% endif %}
        </h2>

        <ul class="nav nav-tabs">
            <li class="active"><a data-toggle="tab" href="#summary">Summary</a></li>
            <li><a data-toggle="tab" href="#definition">Definition</a></li>
            <li><a data-toggle="tab" href="#identification">Identification</a></li>
            <li><a data-toggle="tab" href="#namespaces">Namespace</a></li>
            <li><a data-toggle="tab" href="#property-hierarchy">Hierarchy</a></li>
            <li><a data-toggle="tab" href="#relations">Relations</a></li>
            <li><a data-toggle="tab" href="#profiles">Profiles</a></li>
            {%  if property.ongoingNamespace is not null %}
                <li><a data-toggle="tab" href="#comments" class="updateViewComment" data-id="{{ property.id }}" data-object="property">Comments <span class="badge {% if property.comments|length > 0  %}progress-bar-danger {% endif %}">{{ property.comments|length }}</span></a></li>
            {% endif %}
        </ul>

        <div class="tab-content">
            <div id="summary" class="tab-pane fade in active">
                <h3>
                    {% if property.identifierInNamespace != property.standardLabel %}
                        {{ property.identifierInNamespace }} {{ property.standardLabel }}
                    {% else %}
                        {{ property.standardLabel }}
                    {% endif %}
                </h3>
                <div class="container">
                    <!--<div class="row">
                        <div class="col-lg-2">
                            <p>Namespace{% if property.namespaces|length > 1 %}s{% endif %}:</p>
                        </div>
                        <div class="col-lg-10">
                            <ul class="list-unstyled">
                                {% for namespace in property.namespaces %}
                                    <li><a href="{{ path('namespace_show', {'id': namespace.id}) }}">{{ namespace.standardLabel }}</a></li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>-->
                    <div class="row">
                        <div class="col-lg-2">
                            <p>Domain:</p>
                        </div>
                        <div class="col-lg-10">
                            <p>
                                <a href="{{ path('class_show', {'id': domainRange.domainId}) }}">{{ domainRange.domainIdentifier }}</a>
                            </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-2">
                            <p>Range:</p>
                        </div>
                        <div class="col-lg-10">
                            <p>
                                <a href="{{ path('class_show', {'id': domainRange.rangeId }) }}">{{ domainRange.rangeIdentifier }}</a>
                            </p>
                        </div>
                    </div>
                    {% if property.childPropertyAssociations|length > 0 %}
                        <div class="row">
                            <div class="col-lg-2">
                                <p>Subproperty of:</p>
                            </div>
                            <div class="col-lg-10">
                                <ul class="list-unstyled">
                                    {% for association in property.childPropertyAssociations %}
                                        {# Savoir si cet entité se trouve bien dans l'un des espaces de nom actifs (filtrage) #}
                                        {% set isInActiveNamespaces = false %}
                                        {% for activeNamespace in activeNamespaces %}
                                            {% if activeNamespace in association.namespaces %}
                                                {% set isInActiveNamespaces = true %}
                                            {% endif %}
                                        {% endfor %}
                                        {% if isInActiveNamespaces %}
                                            <li>
                                                <a href="{{ path('class_show', {'id': association.parentProperty.domain.id}) }}">
                                                    {{ association.parentProperty.domain.identifierInNamespace }} {{ association.parentProperty.domain.standardLabel }}
                                                </a> →
                                                <a href="{{ path('property_show', {'id': association.parentProperty.id}) }}">
                                                    {{ association.parentProperty.identifierInNamespace }} {{ association.parentProperty.standardLabel }}
                                                </a> →
                                                <a href="{{ path('class_show', {'id': association.parentProperty.range.id}) }}">
                                                    {{ association.parentProperty.range.identifierInNamespace }} {{ association.parentProperty.range.standardLabel }}
                                                </a>
                                            </li>
                                        {% endif %}
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                    {% endif %}
                    {% if property.parentPropertyAssociations|length > 0 %}
                        <div class="row">
                            <div class="col-lg-2">
                                <p>Superproperty of:</p>
                            </div>
                            <div class="col-lg-10">
                                <ul class="list-unstyled">
                                    {% for association in property.parentPropertyAssociations %}
                                        {# Savoir si cet entité se trouve bien dans l'un des espaces de nom actifs (filtrage) #}
                                        {% set isInActiveNamespaces = false %}
                                        {% for activeNamespace in activeNamespaces %}
                                            {% if activeNamespace in association.namespaces %}
                                                {% set isInActiveNamespaces = true %}
                                            {% endif %}
                                        {% endfor %}
                                        {% if isInActiveNamespaces %}
                                            <li>
                                                <a href="{{ path('class_show', {'id': association.childProperty.domain.id}) }}">
                                                    {{ association.childProperty.domain.identifierInNamespace }} {{ association.childProperty.domain.standardLabel }}
                                                </a> →
                                                <a href="{{ path('property_show', {'id': association.childProperty.id}) }}">
                                                    {{ association.childProperty.identifierInNamespace }} {{ association.childProperty.standardLabel }}
                                                </a> →
                                                <a href="{{ path('class_show', {'id': association.childProperty.range.id}) }}">
                                                    {{ association.childProperty.range.identifierInNamespace }} {{ association.childProperty.range.standardLabel }}
                                                </a>
                                            </li>
                                        {% endif %}
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                    {% endif %}
                    <div class="row">
                        <div class="col-lg-2">
                            <p>Quantification:</p>
                        </div>
                        <div class="col-lg-10">
                            {% if property.quantifiers is not null %}
                                <p>{{ property.quantifiers }}</p>
                            {% else %}
                                <p><i>No quantifiers yet.</i></p>
                            {% endif %}
                        </div>
                    </div>
                    {% if property.entityAssociations|length > 0 %}
                    <div class="row">
                        <div class="col-lg-2">
                            <p>Relations:</p>
                        </div>
                        <div class="col-lg-10">
                            <ul class="list-unstyled">
                                {% for relation in property.entityAssociations if relation.systemType.id == 18 or relation.systemType.id == 20 %}
                                    {# Savoir si cet entité se trouve bien dans l'un des espaces de nom actifs (filtrage) #}
                                    {% set isInActiveNamespaces = false %}
                                    {% for activeNamespace in activeNamespaces %}
                                        {% if activeNamespace in relation.namespaces %}
                                            {% set isInActiveNamespaces = true %}
                                        {% endif %}
                                    {% endfor %}
                                    {% if isInActiveNamespaces %}
                                    <li>{{ relation.systemType.standardLabel }}
                                        {% if relation.sourceProperty.id == property.id %}
                                            <a href="{{ path("property_show", {'id': relation.targetProperty.id }) }}">
                                                {{ relation.targetProperty.invertedLabel }}
                                            </a>
                                        {% else %}
                                            <a href="{{ path("property_show", {'id': relation.sourceProperty.id }) }}">
                                                {{ relation.sourceProperty.invertedLabel }}
                                            </a>
                                        {% endif %}
                                    </li>
                                    {% endif %}
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                    {% endif %}
                    <div class="row">
                        <div class="col-lg-2">
                            <p>Scope note:</p>
                        </div>
                        <div class="col-lg-10">
                            {% set scopeNote, break = '<i>No scope note yet.</i>', false %}
                            {% for textProperty in property.textProperties if textProperty.systemType.id == 1 %}
                                {# Savoir si cet entité se trouve bien dans l'un des espaces de nom actifs (filtrage) #}
                                {% set isInActiveNamespaces = false %}
                                {% for activeNamespace in activeNamespaces %}
                                    {% if activeNamespace in textProperty.namespaces %}
                                        {% set isInActiveNamespaces = true %}
                                    {% endif %}
                                {% endfor %}
                                {% if isInActiveNamespaces %}
                                    {% if not break %}
                                        {% if textProperty.languageIsoCode == 'en' %}
                                            {% set break = true %}
                                            {% set scopeNote = textProperty.textProperty %}
                                        {% else %}
                                            {% if scopeNote == '<i>No scope note yet.</i>' %}
                                                {% set scopeNote = textProperty.textProperty %}
                                            {% endif %}
                                        {% endif %}
                                    {% endif %}
                                {% endif %}
                            {% endfor %}
                            {{ scopeNote|raw }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-2">
                            <p>Examples:</p>
                        </div>
                        <div class="col-lg-10">
                            {% set empty = true %}
                            {% for textProperty in property.textProperties if textProperty.systemType.id == 7 %}
                                {# Savoir si cet entité se trouve bien dans l'un des espaces de nom actifs (filtrage) #}
                                {% set isInActiveNamespaces = false %}
                                {% for activeNamespace in activeNamespaces %}
                                    {% if activeNamespace in textProperty.namespaces %}
                                        {% set isInActiveNamespaces = true %}
                                    {% endif %}
                                {% endfor %}
                                {% if isInActiveNamespaces %}
                                    {% set empty = false %}
                                    {{ textProperty.textProperty|raw }}
                                {% endif %}
                            {% endfor %}
                            {% if empty %}
                                <p><i>No example yet.</i></p>
                            {% endif %}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-2">
                            <p>In First Order Logic:</p>
                        </div>
                        <div class="col-lg-10">
                            <ul class="list-unstyled">
                                <li>{{ property.identifierInNamespace }}(x,y) ⊃ {{ property.domain.identifierInNamespace }}(x)</li>
                                <li>{{ property.identifierInNamespace }}(x,y) ⊃ {{ property.range.identifierInNamespace }}(y)</li>
                                {% for association in property.childPropertyAssociations %}
                                    {# Savoir si cet entité se trouve bien dans l'un des espaces de nom actifs (filtrage) #}
                                    {% set isInActiveNamespaces = false %}
                                    {% for activeNamespace in activeNamespaces %}
                                        {% if activeNamespace in association.namespaces %}
                                            {% set isInActiveNamespaces = true %}
                                        {% endif %}
                                    {% endfor %}
                                    {% if isInActiveNamespaces %}
                                        <li>{{ property.identifierInNamespace }}(x,y) ⊃ {{ association.parentProperty.identifierInNamespace }}(x,y)</li>
                                    {% endif %}
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div id="definition" class="tab-pane fade">
                <h3>Scope Notes</h3>
                <table class="table table-striped" id="scope-notes-table">
                    <thead>
                    <tr>
                        <th>Show</th>
                        <th>Scope note</th>
                        <th>Language</th>
                        <th>Namespace</th>
                        <th>View details</th>
                        <th>Comments</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for textProperty in property.textProperties if textProperty.systemType.id == 1 %}
                        {# Savoir si le scope note se trouve bien dans l'un des espaces de nom actifs (filtrage) #}
                        {% set isInActiveNamespaces = false %}
                        {% for activeNamespace in activeNamespaces %}
                            {% if activeNamespace in textProperty.namespaces %}
                                {% set isInActiveNamespaces = true %}
                            {% endif %}
                        {% endfor %}
                        {% if isInActiveNamespaces %}
                        {{ include('textProperty/modal.html.twig', { 'modalId': textProperty.id }) }}
                        <tr>
                            <td><a class="btn" href="#" data-toggle="modal" data-target="#modal-text-property-{{ textProperty.id }}"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a></td>
                            <td class="truncated-text">
                                <span>{{ textProperty.textProperty|striptags|raw }}</span>
                            </td>
                            <td>{{ textProperty.languageIsoCode}}</td>
                            <td>WIP</td>
                            <td>
                                <a class="btn" href="{{ path('text_property_show', {
                                    'id': textProperty.id
                                }) }}">
                                    <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
                                </a>
                            </td>
                            <td>
                                <a class="btn" href="{{ path('text_property_show', {
                                    'id': textProperty.id
                                }) }}#comments" class="updateViewComment" data-id="{{ textProperty.id }}" data-object="text-property">
                                    <span class="badge {% if textProperty.comments|length > 0  %}progress-bar-danger {% endif %}">{{ textProperty.comments|length }}</span>
                                </a>
                            </td>
                        </tr>
                        {% endif %}
                    {% endfor %}
                    </tbody>
                </table>
                <h3>Examples</h3>
                <table class="table table-striped" id="examples-table">
                    <thead>
                    <tr>
                        <th>Show</th>
                        <th>Example</th>
                        <th>Language</th>
                        <th>Namespace</th>
                        <th>View details</th>
                        <th>Comments</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for textProperty in property.textProperties if textProperty.systemType.id == 7 %}
                        {# Savoir si le scope note se trouve bien dans l'un des espaces de nom actifs (filtrage) #}
                        {% set isInActiveNamespaces = false %}
                        {% for activeNamespace in activeNamespaces %}
                            {% if activeNamespace in textProperty.namespaces %}
                                {% set isInActiveNamespaces = true %}
                            {% endif %}
                        {% endfor %}
                        {% if isInActiveNamespaces %}
                        <tr>
                            <td><a class="btn" href="#" data-toggle="modal" data-target="#modal-text-property-{{ textProperty.id }}"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a></td>
                            <td class="truncated-text">
                                <span>{{ textProperty.textProperty|striptags|raw }}</span>
                                {{ include('textProperty/modal.html.twig', { 'modalId': textProperty.id }) }}
                            </td>
                            <td>{{ textProperty.languageIsoCode}}</td>
                            <td>WIP</td>
                            <td>
                                <a class="btn" href="{{ path('text_property_show', {
                                    'id': textProperty.id
                                }) }}">
                                    <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
                                </a>
                            </td>
                            <td>
                                <a class="btn" href="{{ path('text_property_show', {
                                    'id': textProperty.id
                                }) }}#comments" class="updateViewComment" data-id="{{ textProperty.id }}" data-object="text-property">
                                    <span class="badge {% if textProperty.comments|length > 0  %}progress-bar-danger {% endif %}">{{ textProperty.comments|length }}</span>
                                </a>
                            </td>
                        </tr>
                        {% endif %}
                    {% endfor %}
                    </tbody>
                </table>
                <h3>Additional notes</h3>
                <table class="table table-striped" id="additional-notes-table">
                    <thead>
                    <tr>
                        <th>Show</th>
                        <th>Notes</th>
                        <th>Language</th>
                        <th>Namespace</th>
                        <th>View details</th>
                        <th>Comments</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for textProperty in property.textProperties if textProperty.systemType.id == 12 %}
                        {# Savoir si le scope note se trouve bien dans l'un des espaces de nom actifs (filtrage) #}
                        {% set isInActiveNamespaces = false %}
                        {% for activeNamespace in activeNamespaces %}
                            {% if activeNamespace in textProperty.namespaces %}
                                {% set isInActiveNamespaces = true %}
                            {% endif %}
                        {% endfor %}
                        {% if isInActiveNamespaces %}
                        <tr>
                            <td><a class="btn" href="#" data-toggle="modal" data-target="#modal-text-property-{{ textProperty.id }}"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a></td>
                            <td class="truncated-text">
                                <span>{{ textProperty.textProperty|striptags|raw }}</span>
                                {{ include('textProperty/modal.html.twig', { 'modalId': textProperty.id }) }}
                            </td>
                            <td>{{ textProperty.languageIsoCode}}</td>
                            <td>WIP</td>
                            <td>
                                <a class="btn" href="{{ path('text_property_show', {
                                    'id': textProperty.id
                                }) }}">
                                    <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
                                </a>
                            </td>
                            <td>
                                <a class="btn" href="{{ path('text_property_show', {
                                    'id': textProperty.id
                                }) }}#comments" class="updateViewComment" data-id="{{ textProperty.id }}" data-object="text-property">
                                    <span class="badge {% if textProperty.comments|length > 0  %}progress-bar-danger {% endif %}">{{ textProperty.comments|length }}</span>
                                </a>
                            </td>
                        </tr>
                        {% endif %}
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div id="identification" class="tab-pane fade">
                {% if domainRange is not empty %}
                    <h3>Identifier : {{ property.identifierInNamespace }}</h3>
                    <h3>Domain and range</h3>
                    <p>
                        <a href="{{ path('class_show', {'id': domainRange.domainId}) }}">{{ domainRange.domainIdentifier }}</a> → {{ domainRange.propertyIdentifier }} → <a href="{{ path('class_show', {'id': domainRange.rangeId}) }}">{{ domainRange.rangeIdentifier }}</a>
                        {% if property.quantifiers is not null %}
                            &nbsp;(Quantifiers {{ property.quantifiers }})
                        {% endif %}
                    </p>
                {% endif %}
                <h3>Labels</h3>
                <table class="table table-striped" id="labels-table">
                    <thead>
                    <tr>
                        <th>Label</th>
                        <th>Language</th>
                        <th>Last updated</th>
                        <th>View details</th>
                        <th>Comments</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for label in property.labels %}
                        {# Savoir si l'entité se trouve bien dans l'un des espaces de nom actifs (filtrage) #}
                        {% set isInActiveNamespaces = false %}
                        {% for activeNamespace in activeNamespaces %}
                            {% if activeNamespace in label.namespaces %}
                                {% set isInActiveNamespaces = true %}
                            {% endif %}
                        {% endfor %}
                        {% if isInActiveNamespaces %}
                        <tr>
                            <td>
                                <a href="{{ path('label_show', {
                                    'id': label.id
                                }) }}">{{ label.label }} {% if label.inverseLabel != ""%}({{ label.inverseLabel }}){% endif %}</a> {% if label.isStandardLabelForLanguage %}*{% endif %}
                            </td>
                            <td>{{ label.languageIsoCode}}</td>
                            <td>{{ label.modificationTime|date('Y-m-d') }}</td>
                            <td>
                                <a class="btn" href="{{ path('label_show', {
                                    'id': label.id
                                }) }}">
                                    <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
                                </a>
                            </td>
                            <td>
                                <a class="btn" href="{{ path('label_show', {
                                    'id': label.id
                                }) }}#comments">
                                    <span class="badge {% if label.comments|length > 0  %}progress-bar-danger {% endif %}">{{ label.comments|length }}</span>
                                </a>
                            </td>
                        </tr>
                        {% endif %}
                    {% endfor %}
                    </tbody>
                </table>
                <p>
                    <span class="glyphicon glyphicon-asterisk" aria-hidden="true"></span>
                    : Standard label for this language
                </p>
            </div>
            <div id="namespaces" class="tab-pane fade">
                <h3>Namespace</h3>
                <table class="table table-striped" id="namespaces-table">
                    <thead>
                    <tr>
                        <th>Namespace</th>
                        <th>Last updated</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for namespace in property.namespaces %}
                        <tr>
                            <td>
                                <a href="{{ path('namespace_show', {
                                    'id': namespace.id
                                }) }}">
                                    {{ namespace }}
                                </a>
                            </td>
                            <td>{{ namespace.modificationTime|date('Y-m-d') }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div id="property-hierarchy" class="tab-pane fade">
                <h3>Parent properties
                    {% set tooltipProperty = "rdfs:subpropertyOf the property below" %}
                    {% if property.childPropertyAssociations|length > 1  %}
                        {% set tooltipProperty = "rdfs:subpropertyOf the properties listed below" %}
                    {% endif %}
                    <a data-toggle="tooltip" data-placement="right" title="{{ property }} {{ tooltipProperty }}">
                        <span class="fas fa-info-circle"></span>
                    </a>
                </h3>
                <table class="table table-striped" id="parent-properties-table">
                    <thead>
                    <tr>
                        <th class="text-right">Domain</th>
                        <th></th>
                        <th class="text-center">Property</th>
                        <th></th>
                        <th>Range</th>
                        <th>Justification</th>
                        <th>Relation namespace</th>
                        <th>View association</th>
                        <th>Comments</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for association in property.childPropertyAssociations %}
                        {# Savoir si l'entité se trouve bien dans l'un des espaces de nom actifs (filtrage) #}
                        {% set isInActiveNamespaces = false %}
                        {% for activeNamespace in activeNamespaces %}
                            {% if activeNamespace in association.namespaces %}
                                {% set isInActiveNamespaces = true %}
                            {% endif %}
                        {% endfor %}
                        {% if isInActiveNamespaces %}
                        <tr>
                            <td class="text-right small">
                                {% if association.parentProperty.domain is not null %}
                                    <a href="{{ path('class_show', {'id': association.parentProperty.domain.id }) }}">
                                        {{ association.parentProperty.domain }}
                                    </a>
                                {% endif %}
                            </td>
                            <td class="small" style="padding-left: 30px;">
                                {% if association.parentProperty.domainMinQuantifier is not null and association.parentProperty.domainMaxQuantifier is not null %}
                                    ({% if  association.parentProperty.domainMinQuantifier != -1 %}{{ association.parentProperty.domainMinQuantifier }}{% else %}n{% endif %},{% if  association.parentProperty.domainMaxQuantifier != -1 %}{{ association.parentProperty.domainMaxQuantifier }}{% else %}n{% endif %})
                                {% endif %}
                            </td>
                            <td class="text-center">
                                <a href="{{ path('property_show', {
                                    'id': association.parentProperty.id,
                                    '_fragment': 'property-hierarchy'
                                }) }}">
                                    {{ association.parentProperty.invertedLabel }}
                                </a>
                            </td>
                            <td class="small" style="padding-right: 30px;">
                                {% if association.parentProperty.rangeMinQuantifier is not null and association.parentProperty.rangeMaxQuantifier is not null %}
                                    ({% if  association.parentProperty.rangeMinQuantifier != -1 %}{{ association.parentProperty.rangeMinQuantifier }}{% else %}n{% endif %},{% if  association.parentProperty.rangeMaxQuantifier != -1 %}{{ association.parentProperty.rangeMaxQuantifier }}{% else %}n{% endif %})
                                {% endif %}
                            </td>
                            <td class="small">
                                {% if association.parentProperty.range is not null %}
                                    <a href="{{ path('class_show', {'id': association.parentProperty.range.id }) }}">
                                        {{ association.parentProperty.range }}
                                    </a>
                                {% endif %}
                            </td>
                            <td>
                                {% if association.textProperties is not null %}
                                    {% for textProperty in association.textProperties if textProperty.systemType.id == 15 %}
                                        {% if loop.index == 1 %}
                                            <a class="btn" href="#" data-toggle="modal" data-target="#modal-text-property-{{ textProperty.id }}"><span class="fas fa-info-circle" aria-hidden="true"></span></a>
                                            {{ include('textProperty/modal.html.twig', { 'modalId': textProperty.id }) }}
                                        {% endif %}
                                    {% endfor %}
                                {% endif %}
                            </td>
                            <td>
                                {% if association.namespaces is not null %}
                                    {% for ns in association.namespaces %}
                                        {{ ns.standardLabel }}
                                    {% endfor %}
                                {% else %}
                                    WIP
                                {% endif %}
                            </td>
                            <td>
                                <a href="{{ path('property_association_show', {'id': association.id}) }}"><span class="fa fa-eye"></span></a>
                            </td>
                            <td>
                                <a class="btn updateViewComment" href="{{ path('property_association_show', {
                                    'id': association.id
                                }) }}#comments" data-id="{{ association.id }}" data-object="property-association">
                                    <span class="badge {% if association.comments|length > 0  %}progress-bar-danger {% endif %}">{{ association.comments|length }}</span>
                                </a>
                            </td>
                        </tr>
                        {% endif %}
                    {% endfor %}
                    </tbody>
                </table>
                <h3>Ancestor properties</h3>
                <table class="table table-striped" id="ancestors-table">
                    <thead>
                    <tr>
                        <th class="text-right">Domain</th>
                        <th></th>
                        <th class="text-center">Property</th>
                        <th></th>
                        <th>Range</th>
                        <th>Depth</th>
                        <th>Property namespace</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for ancestor in ancestors|sort %}
                        {# Savoir si l'entité se trouve bien dans l'un des espaces de nom actifs (filtrage) #}
                        {% set isInActiveNamespaces = false %}
                        {% for activeNamespace in activeNamespaces %}
                            {% if activeNamespace.standardLabel == ancestor.propertyNamespaceLabel %}
                                {% set isInActiveNamespaces = true %}
                            {% endif %}
                        {% endfor %}
                        {% if isInActiveNamespaces %}
                        <tr>
                            <td class="text-right small">
                                {% if ancestor.domainIdentifier is not null %}
                                    <a href="{{ path('class_show', {'id': ancestor.has_domain }) }}">
                                        {% if ancestor.domainStandardLabel == ancestor.domainIdentifier %}
                                            {{ ancestor.domainStandardLabel }}
                                        {% else %}
                                            {{ ancestor.domainStandardLabel }} – {{ ancestor.domainIdentifier }}
                                        {% endif %}
                                    </a>
                                {% endif %}
                            </td>
                            <td class="small" style="padding-left: 30px;">
                                {% if ancestor.domain_instances_min_quantifier is not null and ancestor.domain_instances_max_quantifier is not null %}
                                    ({% if  ancestor.domain_instances_min_quantifier != -1 %}{{ ancestor.domain_instances_min_quantifier }}{% else %}n{% endif %},{% if  ancestor.domain_instances_max_quantifier != -1 %}{{ ancestor.domain_instances_max_quantifier }}{% else %}n{% endif %})
                                {% endif %}
                            </td>
                            <td class="text-center">
                                <a href="{{ path('property_show', {
                                    'id': ancestor.id,
                                    '_fragment': 'property-hierarchy'
                                }) }}">
                                    {{ ancestor.identifier }}
                                </a>
                            </td>
                            <td class="small" style="padding-right: 30px;">
                                {% if ancestor.range_instances_min_quantifier is not null and ancestor.range_instances_max_quantifier is not null %}
                                    ({% if  ancestor.range_instances_min_quantifier != -1 %}{{ ancestor.range_instances_min_quantifier }}{% else %}n{% endif %},{% if  ancestor.range_instances_max_quantifier != -1 %}{{ ancestor.range_instances_max_quantifier }}{% else %}n{% endif %})
                                {% endif %}
                            </td>
                            <td class="small">
                                {% if ancestor.rangeIdentifier is not null %}
                                    <a href="{{ path('class_show', {'id': ancestor.has_range }) }}">
                                        {% if ancestor.rangeStandardLabel == ancestor.rangeIdentifier %}
                                        {{ ancestor.rangeStandardLabel }}
                                        {% else %}
                                            {{ ancestor.rangeStandardLabel }} – {{ ancestor.rangeIdentifier }}
                                        {% endif %}
                                    </a>
                                {% endif %}
                            </td>
                            <td>{{ ancestor.depth }}</td>
                            <td>{{ ancestor.propertyNamespaceLabel }}</td>
                        </tr>
                        {% endif %}
                    {% endfor %}
                    </tbody>
                </table>
                <h3>Childs and descendant properties</h3>
                <table class="table table-striped" id="descendants-table">
                    <thead>
                    <tr>
                        <th class="text-right">Domain</th>
                        <th></th>
                        <th class="text-center">Property</th>
                        <th></th>
                        <th>Range</th>
                        <th>Depth</th>
                        <th>Property namespace</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for descendant in descendants|sort %}
                        {# Savoir si l'entité se trouve bien dans l'un des espaces de nom actifs (filtrage) #}
                        {% set isInActiveNamespaces = false %}
                        {% for activeNamespace in activeNamespaces %}
                            {% if activeNamespace.standardLabel == descendant.propertyNamespaceLabel %}
                                {% set isInActiveNamespaces = true %}
                            {% endif %}
                        {% endfor %}
                        {% if isInActiveNamespaces %}
                        <tr>
                            <td class="text-right small">
                                {% if descendant.domainIdentifier is not null %}
                                    <a href="{{ path('class_show', {'id': descendant.has_domain }) }}">
                                        {% if descendant.domainStandardLabel == descendant.domainIdentifier %}
                                            {{ descendant.domainStandardLabel }}
                                        {% else %}
                                            {{ descendant.domainStandardLabel }} – {{ descendant.domainIdentifier }}
                                        {% endif %}
                                    </a>
                                {% endif %}
                            </td>
                            <td class="small" style="padding-left: 30px;">
                                {% if descendant.domain_instances_min_quantifier is not null and descendant.domain_instances_max_quantifier is not null %}
                                    ({% if  descendant.domain_instances_min_quantifier != -1 %}{{ descendant.domain_instances_min_quantifier }}{% else %}n{% endif %},{% if  descendant.domain_instances_max_quantifier != -1 %}{{ descendant.domain_instances_max_quantifier }}{% else %}n{% endif %})
                                {% endif %}
                            </td>
                            <td class="text-center">
                                <a href="{{ path('property_show', {
                                    'id': descendant.id,
                                    '_fragment': 'property-hierarchy'
                                }) }}">
                                    {{ descendant.identifier }}
                                </a>
                            </td>
                            <td class="small" style="padding-right: 30px;">
                                {% if descendant.range_instances_min_quantifier is not null and descendant.range_instances_max_quantifier is not null %}
                                    ({% if  descendant.range_instances_min_quantifier != -1 %}{{ descendant.range_instances_min_quantifier }}{% else %}n{% endif %},{% if  descendant.range_instances_max_quantifier != -1 %}{{ descendant.range_instances_max_quantifier }}{% else %}n{% endif %})
                                {% endif %}
                            </td>
                            <td class="small">
                                {% if descendant.rangeIdentifier is not null %}
                                    <a href="{{ path('class_show', {'id': descendant.has_range }) }}">
                                        {% if descendant.rangeStandardLabel == descendant.rangeIdentifier %}
                                            {{ descendant.rangeStandardLabel }}
                                        {% else %}
                                            {{ descendant.rangeStandardLabel }} – {{ descendant.rangeIdentifier }}
                                        {% endif %}
                                    </a>
                                {% endif %}
                            </td>
                            <td>{{ descendant.depth }}</td>
                            <td>{{ descendant.propertyNamespaceLabel }}</td>
                        </tr>
                        {% endif %}
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div id="relations" class="tab-pane fade">
                <h3>Related properties</h3>
                <table class="table table-striped" id="relations-table">
                    <thead>
                    <tr>
                        <th>Relation</th>
                        <th>Property</th>
                        <th>Justification</th>
                        <th>Relation namespace</th>
                        <th>View details</th>
                        <th>Comments</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for relation in property.entityAssociations if relation.systemType.id == 18 or relation.systemType.id == 20 %}
                        {# Savoir si l'entité se trouve bien dans l'un des espaces de nom actifs (filtrage) #}
                        {% set isInActiveNamespaces = false %}
                        {% for activeNamespace in activeNamespaces %}
                            {% if activeNamespace in relation.namespaces %}
                                {% set isInActiveNamespaces = true %}
                            {% endif %}
                        {% endfor %}
                        {% if isInActiveNamespaces %}
                        <tr>
                            <td>{{ relation.systemType }}</td>
                            {% if property.id == relation.sourceProperty.id %}
                                <td><a href="{{ path('property_show', {
                                        'id': relation.targetProperty.id
                                    }) }}">
                                        {{ relation.targetProperty.invertedLabel }}
                                    </a>
                                </td>
                            {% else %}
                                <td><a href="{{ path('property_show', {
                                        'id': relation.sourceProperty.id
                                    }) }}">
                                        {{ relation.sourceProperty.invertedLabel }}
                                    </a>
                                </td>
                            {% endif %}
                            <td>
                                {% if relation.textProperties is not null %}
                                    {% for textProperty in relation.textProperties if textProperty.systemType.id == 15 %}
                                        {% if loop.index == 1 %}
                                            <a class="btn" href="#" data-toggle="modal" data-target="#modal-text-property-{{ textProperty.id }}"><span class="fas fa-info-circle" aria-hidden="true"></span></a>
                                            {{ include('textProperty/modal.html.twig', { 'modalId': textProperty.id }) }}
                                        {% endif %}
                                    {% endfor %}
                                {% endif %}
                            </td>
                            <td>
                                {% if relation.namespaces is not null %}
                                    {% if relation.namespaces|first.topLevelNamespace is not null %}
                                        {{ relation.namespaces|first.topLevelNamespace }}
                                    {% endif %}
                                {% endif %}
                            </td>
                            <td>
                                {% if property.id == relation.sourceProperty.id %}
                                    <a href="{{ path('entity_association_show', {
                                        'id': relation.id
                                    }) }}">
                                        <span class="fa fa-eye"></span>
                                    </a>
                                {% else %}
                                    <a href="{{ path('entity_association_inverse_show', {
                                        'id': relation.id
                                    }) }}">
                                        <span class="fa fa-eye"></span>
                                    </a>
                                {% endif %}
                            </td>
                            <td>
                                {% if property.id == relation.sourceProperty.id %}
                                    <a class="btn updateViewComment" href="{{ path('entity_association_show', {
                                        'id': relation.id
                                    }) }}#comments" data-id="{{ relation.id }}" data-object="entity-association">
                                        <span class="badge {% if relation.comments|length > 0  %}progress-bar-danger {% endif %}">{{ relation.comments|length }}</span>
                                    </a>
                                {% else %}
                                    <a class="btn updateViewComment" href="{{ path('entity_association_inverse_show', {
                                        'id': relation.id
                                    }) }}#comments" data-id="{{ relation.id }}" data-object="entity-association">
                                        <span class="badge {% if relation.comments|length > 0  %}progress-bar-danger {% endif %}">{{ relation.comments|length }}</span>
                                    </a>
                                {% endif %}
                            </td>
                        </tr>
                        {% endif %}
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div id="profiles" class="tab-pane fade">
                <h3>Profiles using this class</h3>
                <table class="table table-striped" id="profiles-table">
                    <thead>
                    <tr>
                        <th>Label</th>
                        <th>Start date</th>
                        <th>End date</th>
                        <th>Last updated</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for profile in property.profiles %}
                        <tr>
                            <td>
                                <a href="{{ path('profile_show', {
                                    'id': profile.id
                                }) }}">
                                    {{ profile.standardLabel }}
                                </a>
                            </td>
                            <td>{{ profile.startDate is empty ? '' : profile.startDate|date('Y-m-d') }}</td>
                            <td>{{ profile.endDate is empty ? '' : profile.endDate|date('Y-m-d') }}</td>
                            <td>{{ profile.modificationTime|date('Y-m-d') }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div id="comments" class="tab-pane fade">
                <h3>Comments</h3>
                <div class="comment-box js-user-info" data-fullname="{{ app.user }}">
                    <div class="action-box">
                        {% if property.comments is empty %}
                            <p id="comment-not-found"><em>No comment found.</em></p>
                        {% endif %}
                        <ul id="comments-list" class="comments-list">
                            {% for comment in property.comments %}
                                <li>
                                    <div class="comment-text">
                                        <p><strong><a href="#">{{ comment.creator.fullName }}</a></strong></p>
                                        <p>{{ comment.comment }}</p>
                                        <span class="date sub-comment-text">on {{ comment.creationTime|date() }}</span>
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>

                        {% if app.user %}
                            <div class="new-comment-form" id="new-comment-form">
                                {{ render(controller('AppBundle:Comment:new', {'object' : 'property', 'objectId' : property.id})) }}
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

