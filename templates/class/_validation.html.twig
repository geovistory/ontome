<h4>
    <span>Validation status:&nbsp;</span>
    {% if is_granted('validate', classVersion)  %}
    <div class="dropdown inline-block">
        <button class="btn btn-default dropdown-toggle" type="button" id="dropdown-validation" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            {% if classVersion.validationStatus is null %}
            <span class="label label-info">
                Candidate
            </span>
            {% elseif classVersion.validationStatus.id == 26  %}
            <span class="label label-success">
                {{ classVersion.validationStatus }}
            </span>
            {% elseif classVersion.validationStatus.id == 27  %}
            <span class="label label-danger">
                {{ classVersion.validationStatus }}
            </span>
            {% elseif classVersion.validationStatus.id == 28  %}
            <span class="label label-warning">
                {{ classVersion.validationStatus }}
            </span>
            {% elseif classVersion.validationStatus.id == 37  %}
                <span class="label label-warning2">
                {{ classVersion.validationStatus }}
            </span>
            {% endif %}
            &nbsp;<span class="caret"></span>
        </button>
        <ul class="dropdown-menu dropdown-versions" aria-labelledby="dropdown-versions">
            {% if countValidationsTxtp > 0 and countValidationsLbl > 0 %}
            <li class="label-success">
                <a class="select-validation-status" data-id ="26" 
                   href="{{ path('class_version_validation_status_edit', {
                                id: classVersion.id,
                                validationStatus: 26
                        }) }}">
                    <span class="label label-success">
                        Validated
                    </span>
                </a>
            </li>
            {% endif %}
            <li class="label-warning">
                <a class="select-validation-status" data-id="28"
                   href="{{ path('class_version_validation_status_edit', {
                       id: classVersion.id,
                       validationStatus: 28
                   }) }}">
                    <span class="label label-warning">
                        Validation request
                    </span>
                </a>
            </li>
            {% if countValidationsTxtp > 0 and countValidationsLbl > 0 %}
            <li class="label-warning2">
                <a class="select-validation-status" data-id="37"
                   href="{{ path('class_version_validation_status_edit', {
                       id: classVersion.id,
                       validationStatus: 37
                   }) }}">
                    <span class="label label-warning2">
                        Under revision
                    </span>
                </a>
            </li>
            <li class="label-danger">
                <a class="select-validation-status" data-id="27" 
                   href="{{ path('class_version_validation_status_edit', {
                        id: classVersion.id,
                        validationStatus: 27
                    }) }}">
                    <span class="label label-danger">
                        Denied (see comment)
                    </span>
                </a>
            </li>
            {% endif %}
        </ul>
    </div>
    {% elseif classVersion.validationStatus is null %}
    <span class="label label-info">
        Candidate
    </span>
    {% elseif classVersion.validationStatus.id == 26  %}
    <span class="label label-success">
        {{ classVersion.validationStatus }}
    </span>
    {% elseif classVersion.validationStatus.id == 27  %}
    <span class="label label-danger">
        {{ classVersion.validationStatus }}
    </span>
    {% elseif classVersion.validationStatus.id == 28  %}
    <span class="label label-warning">
        {{ classVersion.validationStatus }}
    </span>
    {% endif %}
</h4>